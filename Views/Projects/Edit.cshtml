@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<div class="row">
    <div class="col-lg-12">
        <div class="card card-outline-info">
            <div class="card-header">
                <h4 class="m-b-0 text-white">Edit Project Details</h4>
            </div>
            <div class="card-body">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

                <div class="form-horizontal form-bordered">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.AuthorId)
                    @Html.HiddenFor(model => model.Created)
                    <div class="form-body">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Project Title</label>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                <small class="form-control-feedback"> Edit the project's title. Be concise. </small>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Description</label>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                <small class="form-control-feedback"> The project's main goal and pertinent details. Use keywords and include relevant information. </small>
                            </div>
                        </div>
                       
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Archived</label>
                            <div class="col-md-9">
                                @Html.CheckBoxFor(model => model.Archived, new { style = "left:0px; position:initial; opacity: 1"})

                                @Html.ValidationMessageFor(model => model.Archived, "", new { @class = "text-danger" })
                            </div>
                        </div>
              

                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="offset-sm-3 col-md-9">
                                        <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Submit</button>
                                        <a href="@Url.Action("Index","Projects")" class="btn btn-inverse">Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
}
            </div>
        </div>
    </div>
</div>
