@model jdean_bugtracker.Models.codeFirst.Project

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-md-6">
        <div class="card card-outline-primary">
            <div class="card-header">
                <h4 class="m-b-0 text-white">@Html.DisplayFor(model => model.Title)</h4>
            </div>
            <div class="card-body">
                <h3 class="card-title"></h3>
                <p class="card-text">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Created)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Created.LocalDateTime)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Updated)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Updated)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>

                        <dt>
                            Project Created By
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.AuthorId)
                        </dd>

                        <dt>Archived?</dt>

                        @Html.CheckBoxFor(model => model.Archived, new { disabled = "disabled", style = "left:0px; position:initial; opacity: 1" })

                    </dl>

                    @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
            {
                        <a href=" @Url.Action("Edit", "Projects", new { id = Model.Id })" class="btn btn-inverse"><i class="fa fa-edit" aria-label="edit"></i> Edit</a>
                    }

                    <a href="  @Url.Action("Index", "Projects")" class="btn btn-inverse"><i class="fa fa-list"></i> Back</a>

                </p>

            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card card-outline-success">
            <div class="card-header">
                <h4 class="m-b-0 text-white">Users on Project</h4>
            </div>
            <div class="card-body">
                <h3 class="card-title"></h3>
                <p class="card-text">
                    <dl class="dl-horizontal">
                        @foreach (var user in Model.Users)
                        {


                            <dt>
                                @user.FullName



                            </dt>
                            @*@foreach (var role in user.SelectedRoles)
                            {

                            
                            <dd>
                    @role
                    </dd>
                            }*@

                        }
                        </dl>
                        </p>

                    </div>



        </div>
    </div>
</div>

